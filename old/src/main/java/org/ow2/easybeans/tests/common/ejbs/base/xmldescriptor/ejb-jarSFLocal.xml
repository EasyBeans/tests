<ejb-jar xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/ejb-jar_3_0.xsd"
	version="3.0">

	<enterprise-beans>
		<!--  Bean -->
		<session>
			<description>
				Session bean used to verify the XML Descriptor.
			</description>
			<display-name>SFSBBasicBeanByXMLLocal</display-name>
			<ejb-name>SFSBBasicBeanByXMLLocal</ejb-name>
			<mapped-name>SFSBBasicBeanByXMLMappedLocal</mapped-name>
			<business-local>
				org.ow2.easybeans.tests.common.ejbs.base.xmldescriptor.ItfBasicBeanLocal
			</business-local>
			<ejb-class>
				org.ow2.easybeans.tests.common.ejbs.base.xmldescriptor.BasicBean
			</ejb-class>
			<session-type>Stateful</session-type>
			<transaction-type>Bean</transaction-type>
		</session>
	</enterprise-beans>
</ejb-jar>