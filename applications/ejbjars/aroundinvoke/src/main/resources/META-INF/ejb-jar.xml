<ejb-jar xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/ejb-jar_3_1.xsd"
  version="3.1">

  <enterprise-beans>

    <!-- Singleton Session Bean -->
    <session>
      <ejb-name>XMLInterceptorBean</ejb-name>
      <mapped-name>XMLInterceptorBean</mapped-name>
      <business-remote>org.ow2.easybeans.application.aroundinvoke.IXMLAroundInvoke</business-remote>
      <ejb-class>org.ow2.easybeans.application.aroundinvoke.XMLInterceptorBean</ejb-class>
      <session-type>Singleton</session-type>
    </session>
  </enterprise-beans>

  <!-- Define interceptors -->
  <interceptors>
    <interceptor>
      <interceptor-class>org.ow2.easybeans.application.aroundinvoke.MyBusinessInterceptor</interceptor-class>
    </interceptor>
    <interceptor>
      <interceptor-class>org.ow2.easybeans.application.aroundinvoke.MyOtherBusinessInterceptor</interceptor-class>
    </interceptor>
  </interceptors>


  <!-- Apply interceptors on all Beans -->
  <assembly-descriptor>
    <interceptor-binding>
      <ejb-name>*</ejb-name>
      <interceptor-class>org.ow2.easybeans.application.aroundinvoke.MyOtherBusinessInterceptor</interceptor-class>
    </interceptor-binding>


    <!-- Exclude default interceptors on the XML Bean  -->
    <interceptor-binding>
      <ejb-name>XMLInterceptorBean</ejb-name>
      <exclude-default-interceptors>true</exclude-default-interceptors>
    </interceptor-binding>

    <!-- And redefine it on the XML Bean -->
    <interceptor-binding>
      <ejb-name>XMLInterceptorBean</ejb-name>
      <interceptor-order>
        <interceptor-class>org.ow2.easybeans.application.aroundinvoke.MyOtherBusinessInterceptor</interceptor-class>
      </interceptor-order>
      <method>
        <method-name>dummyCallOverrided</method-name>
      </method>
    </interceptor-binding>

  </assembly-descriptor>
  
</ejb-jar>
